<style>
  /* Estilos para el formulario de inicio de sesi√≥n */
  .login-form {
    width: 400px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 4px;
    background-color: #f8f8f8;
    text-align: center;
    margin-top: 30vh;
    transform: translateY(-50%);
  }

  .login-form h2 {
    margin-bottom: 20px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 28px;
    color: #333;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .login-form .field {
    margin-bottom: 10px;
    text-align: left;
  }

  .login-form .field label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
  }

  .login-form .field input[type="email"],
  .login-form .field input[type="password"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 14px;
  }

  .login-form .actions {
    margin-top: 20px;
  }

  .login-form .actions input[type="submit"] {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #1e90ff; /* Cambio de color a azul */
    border: none;
    border-radius: 4px;
    color: white;
    font-size: 16px;
    cursor: pointer;
  }

  .login-form .actions input[type="submit"]:hover {
    background-color: #0066cc;
  }

  .login-form .actions a {
    color: #333;
    text-decoration: none;
  }
</style>

<div class="login-form">
  <h2><span style="color: #1e90ff;">Log</span> in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>