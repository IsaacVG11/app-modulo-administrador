= form_for @state do |f|
  - if @state.errors.any?
    .card.mx-4
      .card-body
        %div{style: 'color: red'}
          %h2
            = 'Could not edit state'
          %ul
            - @state.errors.each do |error|
              %li= error.full_message

  .form-group.text-center.mx-4.mb-3
    = f.label :ontime, class: "form-label required"
    .div.w-25.mx-auto 
      = f.number_field :ontime, step: 1, autofocus: true, class: "form-control"
  
  .form-group.text-center.mx-4.mb-3
    = f.label :overtime, class: "form-label required"
    .div.w-25.mx-auto 
      = f.number_field :overtime, step: 1, autofocus: true, class: "form-control"
  
  .form-group.text-center.mx-4.mb-5
    = f.label :late, class: "form-label required"
    .div.w-25.mx-auto 
      = f.number_field :late, step: 1, autofocus: true, class: "form-control"

  .row.mt-4
    .offset-3.col-3.text-center
      = link_to 'Back', stateviews_path, class: "btn btn-secondary btn-block"
    .col-3.text-center
      = button_tag 'Save', class: "btn btn-outline-success btn-block"
