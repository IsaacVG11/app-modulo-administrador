= form_for @dish do |f|
  - if @dish.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dish.errors.count, "error")} prohibited this dish from being saved:"
      %ul
        - @dish.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :dish_name
    = f.text_field :dish_name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :dish_image
    = f.text_field :dish_image
  .actions
    = f.submit 'Save'
