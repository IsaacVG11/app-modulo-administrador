= form_for @order do |f|
  - if @order.errors.any?
    .card.mx-4
      .card-body
        %div{style: 'color: red'}
          %h2
            =t('application.can_not_be_saved')#Falta traduccion
          %ul
            - @order.errors.each do |error|
              %li= error.full_message

  .form-group.text-center.mx-4.mb-5
    = f.label :order_state, class: "form-label required"
    .div.w-25.mx-auto 
      = f.select(:order_state, options_for_select(order_states_helper, @order.order_state), {prompt: 'select'}, class: "form-control")

  .row.mt-4
    .offset-3.col-3.text-center
      = link_to 'Back', orderviews_path, class: "btn btn-secondary btn-block"
    .col-3.text-center
      = button_tag 'Save', class: "btn btn-outline-success btn-block"
