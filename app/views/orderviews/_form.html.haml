= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :order_time
    = f.time_field :order_time
  .field
    = f.label :order_date
    = f.date_field :order_date
  .actions
    = f.submit 'Save'
