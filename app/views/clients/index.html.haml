%h1 Listing clients

%table
  %thead
    %tr
      %th Full name
      %th Address
      %th Email
      %th Password
      %th
      %th
      %th

  %tbody
    - @clients.each do |client|
      %tr
        %td= client.full_name
        %td= client.address
        %td= client.email
        %td= client.password
        %td= link_to 'Show', client
        %td= link_to 'Edit', edit_client_path(client)
        %td= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }

