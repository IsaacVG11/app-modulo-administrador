= form_for @admin, url: url_for(controller: 'admins/registrations', action: 'update'), method: :patch do |f|
  - if @admin.errors.any?
    .card.mx-4
      .card-body
        %div{style: 'color: red'}
          %h2
            = t('application.can_not_be_saved') # Falta traducci√≥n
          %ul
            - @admin.errors.each do |error|
              %li= error.full_message
    
  .form-group.mx-4
    = f.label :email, class: "form-label required"
    .div.w-25 
      = f.email_field :email, autofocus: true, class: "form-control"

  .form-group.mx-4
    = f.label :password, class: "form-label required"
    .div.w-25 
      = f.password_field :password, autofocus: true, class: "form-control"

  .form-group.mx-4
    = f.label :password_confirmation, class: "form-label required"
    .div.w-25 
      = f.password_field :password_confirmation, autofocus: true, class: "form-control"

  .row.mt-4
    .offset-3.col-3
      = link_to 'back', adminviews_path, class: "btn btn-secondary btn-block"
    .col-3
      = button_tag 'save', class: "btn btn-outline-success btn-block"