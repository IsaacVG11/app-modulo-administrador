= form_for @admin, url: url_for(controller: 'admins/registrations', action: 'create') do |f|
  - if @admin.errors.any?
    .card.mx-4
      .card-body
        %div{style: 'color: red'}
          %h2
            = 'Could not save manager'
          %ul
            - @admin.errors.each do |error|
              %li= error.full_message

  .form-group.text-center.mx-4.mb-3
    = f.label :full_name, class: "form-label required"
    .div.w-25.mx-auto
      = f.text_field :full_name, autofocus: true, class: "form-control", required: true

  .form-group.text-center.mx-4.mb-3
    = f.label :email, class: "form-label required"
    .div.w-25.mx-auto
      = f.email_field :email, autofocus: true, class: "form-control", required: true

  .form-group.text-center.mx-4.mb-3
    = f.label :password, class: "form-label required"
    .div.w-25.mx-auto
      = f.password_field :password, autofocus: true, class: "form-control", required: true

  .form-group.text-center.mx-4.mb-5
    = f.label :password_confirmation, class: "form-label required"
    .div.w-25.mx-auto
      = f.password_field :password_confirmation, autofocus: true, class: "form-control", required: true

  .row.mt-4
    .offset-3.col-3.text-center
      = link_to 'Back', adminviews_path, class: "btn btn-secondary btn-block"
    .col-3.text-center
      = button_tag 'Save', class: "btn btn-outline-success btn-block"

